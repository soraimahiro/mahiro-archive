---  
import { Image } from "astro:assets";
import hero from '../assets/green.png';  
---  
  
<section class="hero py-12 lg:py-20">  
  <div class="hero-content container mx-auto flex flex-col-reverse lg:flex-row items-center px-4 gap-8">  
    <!-- Text -->  
    <div class="lg:w-1/2 flex flex-col justify-center text-center lg:text-left">  
      <h1 class="text-4xl md:text-5xl font-bold leading-tight font-[Ubuntu]">
        Welcome to Mahiro Archive
      </h1>
      <p class="mt-4 text-base md:text-lg max-w-[600px] mx-auto lg:mx-0 font-[Zen_Kurenaido]">
        <span class="text-blue-300">ブルアカ</span>を一生やりたい
      </p>
    </div>  
  
    <!-- Image -->  
    <div class="lg:w-1/2">  
      <Image src={hero} alt="StarGarden hero illustration" class="rounded-xl shadow-md w-full object-cover" />
      <div class="w-full text-right mt-2 text-sm">
        <a href="https://www.pixiv.net/artworks/113199893"
        class="hover:text-blue-300">Source</a>
      </div>
    </div>  
  </div>  
</section>